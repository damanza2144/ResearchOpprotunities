<h1>Listing advisors</h1>
<table>
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Phone Number</th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
<% @advisors.each do |advisor| %>
	<tr>
		<td><%= advisor.first_name %></td>
		<td><%= advisor.last_name %></td>
		<td><%= advisor.email %></td>
		<td><%= advisor.phone_number %></td>
		<td>
			<% advisor.researches.each do |research| %>
				<%= link_to @research.title, advisor_researches_index_path(@research.id) %> <br>
			<% end %>
		</td>
		<td><%= link_to 'Show', advisor %></td>
		<td><%= link_to 'Edit', edit_advisor_path(advisor) %></td>
		<td><%= link_to 'Destroy', advisor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
<% end %>
</table>

